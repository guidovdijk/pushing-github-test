{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            1,
            4
        ],
        "array-element-newline": [
            1,
            { "multiline": true, "minItems": 3 }
        ],
        "array-bracket-newline": [
            1,
            { "minItems": 0 } 
        ],
        "linebreak-style": [
            1,
            "windows"
        ],
        "quotes": [
            1,
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "camelcase": [
            1, 
            {
                "properties": "always"
            }
        ]
    }
}
