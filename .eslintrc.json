{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            2,
            4
        ],
        "array-element-newline": [
            2,
            { "multiline": true, "minItems": 3 }
        ],
        "linebreak-style": [
            2,
            "windows"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "camelcase": [
            2, 
            {
                "properties": "always"
            }
        ]
    }
}
